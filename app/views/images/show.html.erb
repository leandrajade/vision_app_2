<div class='h-screen w-screen flex flex-col justify-center items-center'>
  <div class='h-auto w-2/5 flex flex-col justify-center items-center'>
    <button class='text-grey text-xl self-center'>
      <%= link_to(user_path(@user)) do %>
        <i class="fas fa-times"></i>
      <% end %>
    </button>
    <div class='w-full grid grid-cols-2'>
      <% if @image.title != nil %>
        <span class='col-start-1 font-bold text-2xl'><%= @image.title %></span>
      <% end %>
      <% if @image.price != nil and @image.price > 0 %>
        <span class='col-start-2 flex justify-end font-bold text-2xl'>PHP <%= @image.price %></span>
      <% end %>
    </div>
    <% if @image.caption != nil %>
      <span class='h-auto self-start text-base mt-8'><%= @image.caption %></span>
    <% end %>
    <image class='mt-8'><%= image_tag @image.img.to_s, :style => 'object-fit:contain; max-width:615px; max-height:500px'  %></image>
    <div class='btns mt-8 mb-4'>
      <% if @image.user_id == current_user.id %>
        <div class='flex'>
          <span class='mx-2'><%= link_to 'Delete', user_image_path(@user, @image), method: :delete, data: { confirm: 'Are you sure?' } %></span> |
          <span class='mx-2'><%= link_to 'Edit', edit_user_image_path(@user, @image) %></span>
        </div>
      <% else %>
        <% if @image.price != nil and @image.price > 0 %>
          <button class='px-4 py-2 bg-black text-white mt-8'><%= link_to 'BUY', images_buy_path(@image) %></button>
        <% end %>
      <% end %>
    </div>
  </div>
</div>