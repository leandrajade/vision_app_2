<div class='h-screen w-screen flex flex-col justify-center items-center'>
  <div class='mt-10 h-auto w-2/5 flex flex-col justify-center items-center'>
    <div class='w-full grid grid-cols-2'>
      <span class='col-start-1 font-bold text-2xl'><%= @image.title %></span>
      <% if @image.price %>
        <span class='col-start-2 flex justify-end font-bold text-2xl'>PHP <%= @image.price %></span>
      <% end %>
    </div>
    <span class='h-auto self-start text-base mt-8'><%= @image.caption %></span>
    <image class='mt-8'><%= image_tag @image.img.to_s, :style => 'object-fit:contain; width:500px; height:auto'  %></image>
    <div class='btns mt-8 mb-4'>
      <% if @user.id == current_user.id %>
        <div class='flex'>
          <span class='mx-2'><%= link_to 'Delete', user_image_path(@user, @image), method: :delete, data: { confirm: 'Are you sure?' } %></span> |
          <span class='mx-2'><%= link_to 'Edit', edit_user_image_path(@user, @image) %></span>
        </div>
      <% else %>
        <button class='border-2 px-4 py-2 bg-black text-white mt-8'>BUY</button>
      <% end %>
    </div>
  </div>
</div>
