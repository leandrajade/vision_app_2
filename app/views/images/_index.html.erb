<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Caption</th>
      <th>Price</th>
      <th>Photo</th>
      <th>On Market</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.user_id %></td>
        <td><%= image.title %></td>
        <td><%= image.caption %></td>
        <td><%= image.price %></td>
        <td><%= image.picture %></td>
        <td><%= image.for_sale %></td>
        <td><%= link_to 'Show', user_image_path(@user, image) %></td>
        <td><%= link_to 'Edit', edit_user_image_path(@user, image) %></td>
        <td><%= link_to 'Destroy', user_image_path(@user, image), method: :delete, data: { confirm: 'Are you sure?' }%></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Upload', new_user_image_path(@user) %>
