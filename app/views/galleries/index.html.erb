<p id="notice"><%= notice %></p>

<%= link_to 'My profile', user_path(@user) %>
<%= link_to 'New Gallery', new_user_gallery_path(@user) %>

<h1>Galleries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Caption</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= gallery.title %></td>
        <td><%= gallery.caption %></td>
        <td><%= link_to 'Show', user_gallery_path(@user, gallery) %></td>
        <td><%= link_to 'Edit', edit_user_gallery_path(@user, gallery) %></td>
        <td><%= link_to 'Destroy', user_gallery_path(@user, gallery), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

