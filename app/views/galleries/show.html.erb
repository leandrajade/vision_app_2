<div class='h-screen w-screen flex flex-col justify-center items-center'>
  <div class='mt-10 h-auto w-3/5 flex flex-col justify-center items-center'>
    <div class='w-full grid grid-cols-2'>
      <span class='col-start-1 font-bold text-2xl'><%= @gallery.title %></span>
      <% if @gallery.gallery_price != nil and @gallery.gallery_price > 0 %>
        <span class='col-start-2 flex justify-end font-bold text-2xl'>PHP <%= @gallery.gallery_price %></span>
      <% end %>
    </div>
    <span class='h-auto self-start text-base mt-8'><%= @gallery.caption %></span>
    <gallery class='mt-8 flex justify-center'>
      <% @gallery.images.each do |image| %>
        <image class='mt-8'><%= image_tag image.img.to_s, :style => 'object-fit:contain; max-width:400px; max-height:400px' %></image>
      <% end %>
    </gallery>
    <div class='btns mt-8 mb-4'>
      <% if @gallery.user_id == current_user.id %>
        <div class='flex'>
          <span class='mx-2'><%= link_to 'Delete', user_gallery_path(current_user, @gallery), method: :delete, data: { confirm: 'Are you sure?' } %></span> |
          <span class='mx-2'><%= link_to 'Edit', edit_user_gallery_path(current_user, @gallery) %></span>
        </div>
      <% else %>
        <%# <button class='border-2 px-4 py-2 bg-black text-white mt-8'><%= link_to 'BUY', images_buy_path(@image) %></button> %>
      <% end %>
    </div>
  </div>
</div>